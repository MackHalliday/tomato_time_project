<center id='play-button'>
  <button type='button' class='btn btn-success' data-toggle='modal' data-target='#myModal-0'>Play Game</button>
</center>

<% questions.each_with_index do |q, i| %>
<div class="modal" id="myModal-<%= i %>" tabindex="-1" role="dialog" aria-labelledby="mainModalLabel" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="mainModalLabel">
            Question <%= i + 1 %>
          </h4>
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        </div>

        <p class='question'><%= q[:question] %></p>
        <hr>
        <ul>
        <% q[:options].each_with_index do |option, i|  %>
          <p class='option-<%= i + 1 %>'> <%= check_box_tag("option-#{i}", value = '1') %> <%= option %></p>
        <% end %>
        </ul>
        <hr />

        <button type="button" class="btn btn-primary btn-lg btn-block" data-dismiss='modal' data-toggle='modal' data-target='#myModal-<%= i + 1 %>'>Next</button>
      </div>
  </div>
</div>
<% end %>

